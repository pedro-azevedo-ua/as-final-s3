{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },

    "RabbitMQ": {
        "HostName": "localhost",
        "Port": 5672,
        "UserName": "user",
        "Password": "password",
        "Exchange": "piranha.external.events",
        "Queue": "piranha.external.queue",
        "RoutingKey": "content.#"
    },

    "AllowedHosts": "*",
    "ConnectionStrings": {
        "piranha": "Filename=./piranha.db",
        "blobstorage": "DefaultEndpointsProtocol=https;AccountName=;AccountKey=;EndpointSuffix="
    },

    "Serilog": {
        "Using": [ "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning",
                "Piranha.Manager.Controllers": "Debug"
            }
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/Events/events-.log",
                    "restrictedToMinimumLevel": "Information",
                    "filters": [
                        {
                            "Name": "ByIncludingOnly",
                            "Args": {
                                "expression": "SourceContext like '%Eventing%'"
                            }
                        }
                    ]
                }
            },
            {
                "Name": "File",
                "Args": {
                    "path": "Logs/Security/security-.log",
                    "restrictedToMinimumLevel": "Information",
                    "filters": [
                        {
                            "Name": "ByIncludingOnly",
                            "Args": {
                                "expression": "SourceContext like '%Security%'"
                            }
                        }
                    ]
                }
            }
        ]
    }


}
